@article{whitehead_changes_2001,
	title = {Changes in passive tension of muscle in humans and animals after eccentric exercise},
	volume = {533},
	issn = {0022-3751},
	url = {https://www.ncbi.nlm.nih.gov/pmc/articles/PMC2278643/},
