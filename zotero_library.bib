	number = {3},
	urldate = {2019-02-25},
	journal = {The American Naturalist},
	author = {Shepard, Emily L. C. and Wilson, Rory P. and Rees, W. Gareth and Grundy, Edward and Lambertucci, Sergio A. and Vosper, Simon B.},
