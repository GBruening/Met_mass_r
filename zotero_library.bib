@article{heckman_motor_2012,
	title = {Motor {Unit}},
	copyright = {Copyright © 2012 American Physiological Society. All rights reserved.},
	url = {https://www.onlinelibrary.wiley.com/doi/abs/10.1002/cphy.c100087},
